<div class="register-section">
    <div class="register-main">
        <div class="col-md-6 col-sm-12">
            <div class="register-form p-2">
                <form action="/store" method="POST">
                    <div class="form-group mt-2">
                        <label for="phone">Phone number</label>
                        <input type="text" class="form-control" id="phone" name="phone" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="form-group mt-2">
                        <label for="fullname">Fullname</label>
                        <input type="text" class="form-control" id="fullname" name="fullname">
                    </div>
                    <div class="form-group mt-2">
                        <label for="birthday">Birthday</label>
                        <input type="date" class="form-control" id="birthday" name="birthday"
                                value="2000-01-01"
                                min="1960-01-01" max="2020-12-31">
                    </div>
                    <div class="form-group mt-2">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="address">
                    </div>

                    {{#ifeq success false}}
                    <div class="alert alert-danger mt-4" role="alert">
                        {{msgReg}}
                    </div>
                    {{/ifeq}}

                    {{#ifeq success true}}
                    <div class="alert alert-success mt-4" role="alert">
                        {{msgReg}}
                    </div>
                    {{/ifeq}}

                    <div class="mt-4">
                        <button type="submit" class="btn btn-black">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="move-to-login-section">
        <div class="register-sidenav">
            <div class="register-main-text">
            <h2> Register Page</h2>
            <p class="text-muted">Click here to <span>LOGIN</span> if you already have an account</p>
            </div>
        </div>
    </div>
</div>

<div class="login-section">
    <div id="move-to-register-section">
        <div class="login-sidenav">
            <div class="login-main-text">
            <h2> Login Page</h2>
            <p class="text-muted">Click here to <span>REGISTER</span> if you don't have an account</p>
            </div>
        </div>
    </div>

    <div class="login-main">
        <div class="col-md-6 col-sm-12">
        <div class="login-form p-3">
            <form action="/validation" method="POST">
                <div class="form-group">
                    <label>User Name</label>
                    <input type="text" name="username" class="form-control mt-2" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control mt-2" placeholder="Enter password">
                </div>
                <div class="mt-1 row">
                    <div class="col">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="remember-me" checked />
                        <label class="form-check-label" for="remember-me"> <i class="text-muted">Remember me</i> </label>
                    </div>
                    </div>

                    <div class="col">
                    <!-- Simple link -->
                        <a href="#!"><i>Forgot password?</i></a>
                    </div>
                </div>

                {{#if msg}}
                    <div class="p-2 alert alert-danger mt-1" role="alert">
                        <span>{{msg}}</span>
                    </div>
                {{/if}}

                <div class="mt-4">
                    <button type="submit" onclick="login()" class="btn btn-black">Login</button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>